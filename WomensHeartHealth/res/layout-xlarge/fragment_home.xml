<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:chartview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearlayout_homeFragment"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".HomeFragment" >

    <!-- METs Graph -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout 
                android:id="@+id/graph_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/metsLoggedTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:ems="10"
                    android:gravity="left"
                    android:text="METs Logged This Week"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/googleNowGray" />

            <com.fima.chartview.ChartView
                android:id="@+id/chart_view"
                android:layout_width="match_parent"
                android:layout_height="150dip"
                android:layout_marginRight="20dp"
                chartview:bottomLabelHeight="20dp"
                chartview:gridLineColor="#E5E5E5"
                chartview:gridLineWidth="1dp"
                chartview:gridLinesHorizontal="6"
                chartview:gridLinesVertical="5"
                chartview:leftLabelWidth="56dp" />
            
            </LinearLayout>

            <View
                android:id="@+id/graphCardDropshadow"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_below="@id/graph_card"
                android:background="@drawable/dropshadow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/target_hr_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/back"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/targertHeartRatesTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginBottom="10dp"
                                android:ems="10"
                                android:gravity="left"
                                android:text="Target Heart Rates"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/googleNowGray" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginRight="5dp"
                                    android:adjustViewBounds="true"
                                    android:contentDescription="@string/about_fragment_image_description"
                                    android:fitsSystemWindows="false"
                                    android:src="@drawable/target" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical" >

                                    <TextView
                                        android:id="@+id/BPM1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ems="10"
                                        android:gravity="left"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textColor="@color/googleNowGray" />

                                    <TextView
                                        android:id="@+id/BPM2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ems="10"
                                        android:gravity="left"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textColor="@color/googleNowGray" />

                                    <TextView
                                        android:id="@+id/BPM3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ems="10"
                                        android:gravity="left"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textColor="@color/googleNowGray" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/targerHRCardDropshadow"
                        android:layout_width="fill_parent"
                        android:layout_height="2dip"
                        android:background="@drawable/dropshadow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/totals_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/back"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/weeksTotalTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:gravity="left"
                        android:text="This Week&apos;s Totals"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/googleNowGray" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/about_fragment_image_description"
                            android:fitsSystemWindows="false"
                            android:src="@drawable/calendar" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/METs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:gravity="left"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/googleNowGray" />

                            <TextView
                                android:id="@+id/Calories"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:gravity="left"
                                android:textAppearance="?android:attr/textAppearanceSmall" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/totalsCardDropshadow"
                        android:layout_width="fill_parent"
                        android:layout_height="2dip"
                        android:background="@drawable/dropshadow" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

    </RelativeLayout>

    <!-- Space -->


    <!-- Target Heart Rates -->


    <!-- Space -->


    <!-- This Week's Totals -->

</LinearLayout>