<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SettingsActivity" >

    <TextView
        android:id="@+id/zz_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/zz_textView2"
        android:layout_below="@+id/zz_textView2"
        android:layout_marginTop="25dp"
        android:text="Your Weight:"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/zz_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_Weight"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:text="lbs"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <EditText
        android:id="@+id/et_Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/zz_textView1"
        android:layout_toLeftOf="@+id/zz_textView4"
        android:ems="3"
        android:inputType="number" >
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/zz_textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_Age"
        android:layout_alignBottom="@+id/et_Age"
        android:layout_alignLeft="@+id/zz_textView3"
        android:text="years"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/et_Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/zz_textView1"
        android:layout_alignLeft="@+id/et_Age"
        android:ems="3"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_saveSettings"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/zz_textView3"
        android:layout_below="@+id/zz_textView3"
        android:layout_marginTop="28dp"
        android:text="OK" />

    <TextView
        android:id="@+id/zz_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="23dp"
        android:text="Your Age:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>