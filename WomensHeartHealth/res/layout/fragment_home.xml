<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout_homeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment" >

        <!-- METs Graph -->
        <TextView
            android:id="@+id/METsLogged"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="METs Logged This Week" 
            android:textAppearance="?android:attr/textAppearanceLarge"/>
      	
        <LinearLayout
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:orientation="vertical" >
        </LinearLayout>
      	
        <!-- Space -->
      	<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text=" " 
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        
        <!-- Target Heart Rates -->
      	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
       
      		<ImageView
        	android:layout_width="200px"
        	android:layout_height="wrap_content"
        	android:adjustViewBounds="true"
        	android:contentDescription="@string/about_fragment_image_description"
        	android:fitsSystemWindows="false"
        	android:src="@drawable/mountains" />
	        
	        <LinearLayout
    	    android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" >
        	
	            <TextView
            	android:id="@+id/TargetHeartRates"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:ems="10"
            	android:text="Target Heart Rates" 
            	android:textAppearance="?android:attr/textAppearanceLarge"/>
	            
                <TextView
                    android:id="@+id/BPM1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
                  
                <TextView
                    android:id="@+id/BPM2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
                
                <TextView
                    android:id="@+id/BPM3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
			</LinearLayout>
		</LinearLayout>
   
      	<!-- Space -->
      	<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text=" " 
            android:textAppearance="?android:attr/textAppearanceLarge"/>
      	
      	<!-- This Week's Totals -->
      	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
       
      		<ImageView
        	android:layout_width="200px"
        	android:layout_height="wrap_content"
        	android:adjustViewBounds="true"
        	android:contentDescription="@string/about_fragment_image_description"
        	android:fitsSystemWindows="false"
        	android:src="@drawable/mountains" />
	        
	        <LinearLayout
    	    android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" >
                
        		<TextView
        		    android:id="@+id/ThisWeeksTotals"
            		android:layout_width="match_parent"
            		android:layout_height="wrap_content"
            		android:ems="10"
            		android:text="This Week's Totals" 
           			android:textAppearance="?android:attr/textAppearanceLarge"/>
        
        		<TextView
            		android:id="@+id/METs"
            		android:layout_width="match_parent"
            		android:layout_height="wrap_content"
            		android:ems="10"
            		android:textAppearance="?android:attr/textAppearanceSmall"/>
        		
        		<TextView
            		android:id="@+id/Calories"
            		android:layout_width="match_parent"
            		android:layout_height="wrap_content"
            		android:ems="10"
            		android:textAppearance="?android:attr/textAppearanceSmall"/>
       		</LinearLayout>
   		</LinearLayout>
</LinearLayout>